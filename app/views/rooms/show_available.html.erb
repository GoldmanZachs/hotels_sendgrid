<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Bedrooms</th>
    <th>Beds</th>
    <th>Nightly rate</th>
    <th>Booking status</th>
    <th>Hotel</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.name %></td>
    <td><%= room.bedrooms %></td>
    <td><%= room.beds %></td>
    <td><%= room.nightly_rate %></td>
    <td><%= room.booking_status %></td>
    <td><%= room.hotel.name %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

